<Window x:Class="Horience.Injector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Horience"
        mc:Ignorable="d"
        Title="Horience" Height="550" Width="450" WindowStyle="None" Padding="0,0,500,600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FF23272A">
        <Label Content="HORIENCE" Margin="62,35,63.6,412.4" FontFamily="Calibri" FontSize="75" Foreground="White" Grid.ColumnSpan="2"/>

        <CheckBox x:Name="CheatCheckBox" Content="Cheat" HorizontalAlignment="Left" Margin="38,200,0,0" VerticalAlignment="Top" Height="17" Width="60"/>
        <CheckBox x:Name="UtilsCheckBox" Content="Utils" HorizontalAlignment="Left" Margin="38,222,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.755,-5.842"/>

        <Button Content="Inject" HorizontalAlignment="Left" Margin="187,287,0,0" VerticalAlignment="Top" Width="75" Click="Inject"/>
        <Label x:Name="ErrorLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="204,256,0,0" Foreground="Red"/>
    </Grid>
</Window>
