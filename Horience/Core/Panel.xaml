<Window x:Class="Horience.Core.Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Horience" 
        Height="1080" 
        Width="1920" 
        FontFamily="Calibri" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        BorderBrush="#FFFFFFFF"
        SizeChanged="ChangeSize"
        MinHeight="600"
        MinWidth="1100">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2C2F33"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    <Grid Background="#36393F">
        <!-- Base column definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.14*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Category selector column -->
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <!-- Manual definition in the code for x:Name "Category" -->
            <StackPanel x:Name="Category" Grid.Column="0"/>
        </ScrollViewer>

        <!-- Chat and cheat/utils selector -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat display -->
            <StackPanel x:Name="Chat" Grid.Row="0" VerticalAlignment="Bottom"/>

            <Grid Grid.Row="0" Panel.ZIndex="1">
                <!-- Cheat/Utils selector -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.17*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                    <!-- Manual definition in the code for x:Name "CheatAndUtils" -->
                    <StackPanel x:Name="CheatAndUtils"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1">
                <!-- Chat text box and send button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" VerticalContentAlignment="Center" Background="#40444B" FontSize="20" Margin="10" Padding="20,0,20,0">Test</TextBox>
                    <Button Grid.Column="1" Margin="10">Send</Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
